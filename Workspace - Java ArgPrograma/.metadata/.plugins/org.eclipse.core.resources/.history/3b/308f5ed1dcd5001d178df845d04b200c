package GUIA1;

public class Cuadrilatero {
	private double largo ,alto ;
	
	public double getLargo() {
		return largo;
	}

	public void setLargo(double largo) {
		this.largo = largo;
	}

	public double getAlto() {
		return alto;
	}

	public void setAlto(double alto) {
		this.alto = alto;
	}

	public Cuadrilatero() {
		
	}
	
	public Cuadrilatero(double l ,double a) {
		this.largo = l;
		this.alto = a;
		
	}
	public double	calcularPerimetro(){
		return this.getLargo() *this.getLargo()/2;
	}
	
	public double calcularArea() {
		return this.getLargo() *this.getLargo();
	}
	
	public Boolean esUnCuadrado() {
		return this.getLargo() ==this.getAlto();
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Cuadrilatero cuaUno= new Cuadrilatero(2,4);

		System.out.print(cuaUno.esUnCuadrado());
	}

}
